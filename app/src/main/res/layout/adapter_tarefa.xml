<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardCornerRadius="10dp"
    android:layout_margin="5dp"
    android:backgroundTint="@color/azulClaro">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="5dp">
        <TextView
            android:id="@+id/nome_tarefa"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="nome da tarefa"
            android:textSize="25dp"
            android:textStyle="bold"/>
        <TextView
            android:id="@+id/data_tarefa"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="20/20/22"
            android:textSize="18dp"/>
        <TextView
            android:id="@+id/status_tarefa"
            android:textAlignment="center"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="Progresso da tarefa"
            android:textSize="18dp"
            android:textStyle="bold"/>
        <ProgressBar
            android:id="@+id/progresso_tarefa"
            style="@android:style/Widget.ProgressBar.Horizontal"
            android:progressTint="@color/verdeMedio"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:progress="30"/>
    </LinearLayout>
</androidx.cardview.widget.CardView>